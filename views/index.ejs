<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Client Server - EJS</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <span class="mobile-header-background"></span>
    <div class="body-wrapper">
      <header>
        <h1>ChatBot</h1>
        <button class="open-personalization-modal">Personalize</button>
      </header>
      <div class="chat-messages-wrapper">
        <div class="chat-messages">
          <% messages.forEach(msg => { %>
          <div class="message <%= msg.sender.toLowerCase() %>">
            <%= msg.text %>
          </div>
          <% }) %>
        </div>
        <!--<% if (typeof error !== 'undefined' && error) { %>
        <div class="error-message"><strong>Error:</strong> <%= error %></div>
        <% } %>-->
      </div>
      <form method="POST" action="/chat" class="chat-form">
        <input
          type="text"
          name="message"
          placeholder="Write your message here"
          class="chat-input"
        />
        <button type="submit" class="chat-button">Send</button>
      </form>
    </div>
    <!-- Personalization modal -->
    <div class="modal-overlay" id="personalizationModalOverlay">
      <div class="personalization-modal">
        <h2>Personalize me!</h2>
        <p>Here you can personalize my answers.</p>
        <button id="closePersonalizationModal">Close</button>
      </div>
    </div>
    <script>
      const chat = document.querySelector(".chat-messages-wrapper");
      chat.scrollTop = chat.scrollHeight;

      // Modal functionality
      const modalOverlay = document.getElementById(
        "personalizationModalOverlay"
      );
      const openModalBtn = document.querySelector(
        ".open-personalization-modal"
      );
      const closeModalBtn = document.getElementById(
        "closePersonalizationModal"
      );

      openModalBtn.addEventListener("click", () => {
        modalOverlay.style.display = "flex";
      });

      closeModalBtn.addEventListener("click", () => {
        modalOverlay.style.display = "none";
      });

      // Close when clicking outside of modal
      modalOverlay.addEventListener("click", (e) => {
        if (e.target === modalOverlay) {
          modalOverlay.style.display = "none";
        }
      });
    </script>
  </body>
</html>
